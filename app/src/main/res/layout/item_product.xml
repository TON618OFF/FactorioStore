<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/coal_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Изображение продукта -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/vulkan"
            android:contentDescription="Изображение продукта"/>

        <!-- Заголовок и иконка избранного -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Наименование товара"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="2"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/favorite"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Добавить в избранное"/>

        </LinearLayout>

        <!-- Описание -->
        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Описание товара"
            android:textSize="14sp"
            android:textColor="@color/smoke_white"
            android:maxLines="3"
            android:ellipsize="end"/>

        <!-- Цена -->
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:text="429 руб."
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/circuit_lime"/>

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/details_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Подробнее"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/oil_teal"
                app:cornerRadius="8dp"/>

            <Button
                android:id="@+id/buy_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Купить"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/circuit_green"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>